{
  "name": "@ankr/rocketlang",
  "version": "2.0.0",
  "description": "RocketLang - Indic-first programming language with Hindi/Tamil/Telugu keywords",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rocket": "./dist/cli/index.js",
    "rocketlang": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./parser": {
      "import": "./dist/parser/index.js",
      "types": "./dist/parser/index.d.ts"
    },
    "./normalizer": {
      "import": "./dist/normalizer/index.js",
      "types": "./dist/normalizer/index.d.ts"
    },
    "./codegen": {
      "import": "./dist/codegen/index.js",
      "types": "./dist/codegen/index.d.ts"
    },
    "./compiler": {
      "import": "./dist/compiler/index.js",
      "types": "./dist/compiler/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime/index.js",
      "types": "./dist/runtime/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./modules": {
      "import": "./dist/modules/index.js",
      "types": "./dist/modules/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ankr-labs/ankrcode.git",
    "directory": "packages/rocketlang"
  },
  "bugs": {
    "url": "https://github.com/ankr-labs/ankrcode/issues"
  },
  "homepage": "https://github.com/ankr-labs/ankrcode#readme",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:grammar && tsc && cp src/parser/grammar.js dist/parser/grammar.js",
    "build:grammar": "peggy --format es -o src/parser/grammar.js src/grammar/rocketlang.pegjs",
    "test": "vitest"
  },
  "keywords": [
    "programming-language",
    "indic",
    "hindi",
    "tamil",
    "telugu",
    "india",
    "dsl",
    "compiler",
    "ankr",
    "rocketlang",
    "multilingual"
  ],
  "author": "ANKR Labs",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "peggy": "^5.0.6",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
